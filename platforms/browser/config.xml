<?xml version='1.0' encoding='utf-8'?>
<widget id="xyz.nathanwatts.score_it" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <feature name="Camera">
        <param name="browser-package" value="Camera" />
    </feature>
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <name>Bridge Score</name>
    <description>
        Simple and easy to use application allows you to score any individual game of duplicate bridge quickly. Select the contract details with the simple, intuitive interface to calculate your expected score, then enter tricks made to work out over/under tricks and provide your final round score, or penalty.
    </description>
    <author email="hello@nathanwatts.xyz" href="https://nathanwatts.xyz">
        Nathan Watts
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
</widget>
